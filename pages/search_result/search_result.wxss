.content {
  width: 90%;
  margin: 0 auto;
}
.activity {
  height: 175rpx;
  background-color: #f0f9f6;
  padding-top: 40rpx;
  margin-bottom: 20rpx;
}

.activity .head {
  float: left;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  background-color: #588c7e;
}

.activity .join {
  float: left;
  height: 60rpx;
  width: 120rpx;
  border-radius: 30rpx;
  background-color: #588c7e;
  line-height: 60rpx;
  color: #f0f9f6;
  text-align: center;
  font-size: 12px;
  margin-top: 10rpx;
}

.title {
  height: 80rpx;
  width: 560rpx;
  margin: 0 auto;
  font-size: 20px;
  color: #588c7e;
}

.intro {
  height: 56rpx;
  width: 560rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #588c7e;
  line-height: 28rpx;
  font-size: 24rpx;
  word-break: break-all;
  overflow: hidden;
}

.float_title {
  display: inline-block;
  width: 70%;
  height: 100%;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #487267;
}

.float_close {
  display: inline-block;
  width: 15%;
  height: 100%;
  text-align: center;
  font-size: 24px;
}

.float_baseinfor {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 8%;
  font-size: 14px;
}
.float_intro{
  height: 180rpx;
  line-height: 60rpx;
  padding: 0 50rpx;
  font-size: 14px;
  overflow-y: scroll;
}
.float_people{
  display: inline-block;
  height: 80px;
  width: 60px;
  margin-right: 15px;
}
.float_button{
  box-sizing: border-box;
  display: inline-block;
  height: 100%;
  width: 50%;
  line-height: 50px;
  text-align: center;
  font-size: 15px;
}