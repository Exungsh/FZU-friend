/* float_card */
.card {
  display: flex;
  box-sizing: border-box;
  position: fixed;
  left: 3%;
  top: 15px;
  width: 94%;
  height: 230px;
  background-color: #f0f9f6;
  padding: 35rpx 50rpx;
  flex-direction: column;
  border-radius: 15px;
  box-shadow: 0 0 55px 0 #a2a8a6;
  transition-duration: 0.4s;
  z-index: 5;
}

.head {
  width: 100%;
  height: 25px;
  margin-bottom: 10rpx;
}

.card-title {
  height: 25px;
  width: 95%;
  display: block;
  float: left;
  font-size: 20px;
  color: #487267;
}

.close {
  font-size: 20px;
  height: 25px;
  width: 5%;
  display: block;
  float: left;
  color: #487267;
}

.card-date {
  font-size: 11px;
  border: 0;
  padding: 0;
  margin-bottom: 10rpx;
  color: #8bada4;
}

.card-place {
  font-size: 14px;
  color: #487267;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 12rpx;
}

.card_people {
  display: inline-block;
  height: 80px;
  width: 60px;
  margin-right: 15px;
}

.people_head {
  width: 60px;
  height: 60px;
  background-color: #588c7e;
  border-radius: 50%;
}

.people_gender {
  height: 15px;
  width: 15px;
  position: relative;
  left: 45px;
  top: -20px;
  border-radius: 50%;
  z-index: 100;
}

.people_name {
  width: 60px;
  height: 20px;
  line-height: 12px;
  font-size: 12px;
  text-align: center;
  color: #487267;
  margin-top: -12px;
}

/* small_float_card */
.small_float {
  display: none;
  box-sizing: border-box;
  height: 100px;
  width: 30px;
  background-color:#588c7e;
  position: fixed;
  right: 0;
  top: 80px;
  font-size: 20px;
  line-height: 20px;
  padding-top: 40px;
  padding-left: 8px;
  color: #f0f9f6;
  border-radius: 15px 0 0 15px;
}

/* float_holder */
.float_holder {
  margin-top: 255px;
  width: 100%;
  transition-duration: 0.4s;
}

.comment {
  box-sizing: border-box;
  width: 94%;
  margin: 10px auto;
  padding: 10px 15px;
  background-color: #f0f9f6;
  border-radius: 15px;
  overflow-wrap:break-word;
}
.comment_name{
  line-height: 20px;
  font-size: 14px;
  color: #487267;
}
.comment_text{
  line-height: 20px;
  font-size: 14px;
  color: #588c7e;
}
/* post */
.post{
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  height:60px;
  width: 100%;
  background-color: #f0f9f6;
  border-radius: 15px 15px 0 0 ;
  padding: 10px;
  box-shadow: 0 0 55px 0 #a2a8a6;
}
.post_input{
  box-sizing: border-box;
  display: block;
  float: left;
  height: 40px;
  width: 87%;
  border:#588c7e solid 1px;
  border-radius: 10px;
  margin-right: 3%;
  padding:0 10px;
  color: #487267;
}
.post_submit{
  display: block;
  float: left;
  height: 40px;
  width: 10%;
  background-color:#588c7e;
  color: #f0f9f6;
  font-size: 16px;
  font-weight: bold;
  line-height: 40px;
  text-align: center;
  border-radius: 10px;
}