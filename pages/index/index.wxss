/**index.wxss**/
/* 搜索 */
.search {
  height: 40px;
  text-align: center;
  margin-bottom: 20px;
}

.search view {
  height: 40px;
  width: 90%;
  line-height: 40px;
  margin: 0 auto;
  border-radius: 20px;
  background-color: #f0f9f6;
  font-size: 14px;
  color: #588c7e;
}

/* 导航 */
.nav {
  width: 90%;
  height: 35px;
  margin: 0 auto;
}

.nav li {
  float: left;
  width: 30%;
}

#nav_1,
#nav_2 {
  margin-right: 5%;
}

.nav ul li button {
  width: 100%;
  height: 35px;
  border-radius: 10px 10px 0 0;
  background-color: #588c7e;
  color: #f0f9f6;
  font-size: 14px;
  font-weight: 400;
  transition-duration: 0.2s;
}

#nav_1 button {
  background-color: #f0f9f6;
  color: #588c7e;
}

/* tag选择 */
.select {
  height: 74rpx;
  width: 90%;
  background-color: #f0f9f6;
  margin: 0 auto;
  overflow-x: scroll;
  white-space: nowrap;
}

.select::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tag {
  box-sizing: border-box;
  height: 74rpx;
  padding: 0 35rpx;
  display: inline-block;
  line-height: 74rpx;
  font-size: 12px;
  text-align: center;
  color: #97c2b5;
  transition-duration: 0.2s;
}

.active {
  color: #588c7e;
  border-bottom: 2px solid #588c7e;
}

/* 内容 */
.content {
  width: 90%;
  margin: 0 auto;
}

.activity {
  height: 175rpx;
  background-color: #f0f9f6;
  padding-top: 40rpx;
  margin-bottom: 20rpx;
}

.activity .head {
  float: left;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  background-color: #588c7e;
}

.activity .join {
  float: left;
  height: 60rpx;
  width: 120rpx;
  border-radius: 30rpx;
  background-color: #588c7e;
  line-height: 60rpx;
  color: #f0f9f6;
  text-align: center;
  font-size: 12px;
  margin-top: 10rpx;
}

.title {
  height: 80rpx;
  width: 560rpx;
  margin: 0 auto;
  font-size: 20px;
  color: #588c7e;
}

.intro {
  height: 56rpx;
  width: 560rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #588c7e;
  line-height: 28rpx;
  font-size: 24rpx;
  word-break: break-all;
  overflow: hidden;
}

.tags li {
  float: left;
  margin-right: 15rpx;
}

.tags li view {
  height: 40rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  border: #588c7e solid 1.5px;
  line-height: 40rpx;
  font-size: 25rpx;
}

/* 发布活动 */
.publish {
  position: fixed;
  bottom: 50rpx;
  right: 35rpx;
  height: 80rpx;
  width: 80rpx;
  background-color: #588c7e;
  color: #f0f9f6;
  border-radius: 40rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 50rpx;
}

/* 悬浮窗 */
.float {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  background-color: rgba(97, 89, 89, 0.28);
}

.float_window {
  position: fixed;
  background-color: #f0f9f6;
  border-radius: 40rpx;
  height: 90%;
  width: 80%;
  left: 10%;
  top: 5%;
}

.float_title {
  display: inline-block;
  width: 70%;
  height: 100%;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #487267;
}

.float_close {
  display: inline-block;
  width: 15%;
  height: 100%;
  text-align: center;
  font-size: 24px;
}

.float_baseinfor {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 8%;
  font-size: 14px;
}

.float_intro {
  height: 180rpx;
  line-height: 60rpx;
  padding: 0 50rpx;
  font-size: 14px;
  overflow-y: scroll;
}

.float_people {
  display: inline-block;
  height: 80px;
  width: 60px;
  margin-right: 15px;
}

.float_button {
  box-sizing: border-box;
  display: inline-block;
  height: 100%;
  width: 50%;
  line-height: 50px;
  text-align: center;
  font-size: 15px;
}
/* 提示信息 */
.tip {
  height: 30px;
  line-height: 10px;
  text-align: center;
  color: #588c7e;
  font-size: 12px;
  margin-top: 15px;
}